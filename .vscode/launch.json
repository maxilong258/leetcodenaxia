{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    // {
    //   "type": "node-terminal",
    //   "name": "Run Script: test",
    //   "request": "launch",
    //   "command": "npm run test",
    //   "cwd": "${workspaceFolder}\\src\\test\\test.js"
    // },
    {
      "name": "使用本机 Chrome 调试",
      "type": "chrome",
      "request": "launch",
      "file": "${workspaceRoot}/src/test/index.html",
      "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}",
      // "userDataDir": "${tmpdir}",
      "userDataDir": true,
      "port": 3939
    },
    {
      "type": "node-terminal",
      "name": "Run Script: test",
      "request": "launch",
      "command": "npm run test",
      "cwd": "${workspaceFolder}"
    }
  ]
}